{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "vite/client"],
  },
  "include": [
    "packages/**/**/*",
    "packages/**/*",
    "vite.config.ts",
    "volar.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}